{
  "name": "tfc-framework",
  "version": "2024.2.9",
  "dependencies": [
    {
      "name": "async-mqtt",
      "version>=": "4.0.0"
    },
    "azmq",
    "bext-sml",
    "bext-ut",
    "boost-asio",
    "boost-coroutine2",
    "boost-program-options",
    "boost-stacktrace",
    "boost-uuid",
    "date",
    "fmt",
    {
      "name": "glaze",
      "version>=": "1.9.6"
    },
    "gtest",
    {
      "name": "libgpiod",
      "features": [
        "cxx-bindings"
      ]
    },
    "magic-enum",
    {
      "name": "mp-units",
      "features": [
        "use-libfmt"
      ],
      "version>=": "2.1.0"
    },
    "openssl",
    "pcg",
    "protobuf",
    {
      "name": "sdbusplus",
      "features": [
        "asio-only"
      ],
      "version>=": "2023-09-14"
    },
    "soem",
    "spdlog",
    "sqlite-modern-cpp",
    "sqlite3",
    "stduuid",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "features": {
    "build-exes": {
      "description": "Build binaries and install them to sysroot"
    }
  }
}
