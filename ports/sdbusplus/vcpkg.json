  "homepage": "https://github.com/openbmc/sdbusplus",
  "license": "Apache-2.0",
  "supports": "linux",
  "dependencies": [
    "boost-asio",
    "boost-callable-traits",
    "libsystemd",
    {
      "name": "vcpkg-get-python-packages",
      "host": true
    },
    {
      "name": "vcpkg-tool-meson",
      "host": true,
      "version>=": "1.3.2"
    }
  ],
  "features": {
    "asio-only": {
      "description": "Use only boost asio for the event loop"
    }
  }
